<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">{{error}}ZapasOnline</h1>
  </div>
</header>

<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">

    <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 text-center">
     {{#if payload}}
     
      {{#each payload}}
        <a href="/products/{{this._id}}" class="group">
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
            <img src="{{this.thumbnail}}" alt="{{this.title}}" class="h-full w-full object-cover object-center group-hover:opacity-75">
          </div>
          <h3 class="mt-4 text-sm text-gray-700">{{this.title}}</h3>
          <p class="mt-1 text-lg font-medium text-gray-900">${{this.price}}</p>
          <p class="mt-1 text-lg font-medium text-gray-700">Stock: {{this.stock}}</p>
        </a>
      {{/each}}
 </div>
  </div>
</div>


{{!-- paginacion --}}
<div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6">  
 <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">

<nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
    {{#if hasPrevPage}}
       <a href={{prevLink}} class="relative inline-flex items-center rounded-l-md px-2 py-2 my-2  mx-2 text-gray-500 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
          <span >Anterior</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
          </svg>
        </a> 
    {{/if}}

   <p class="text-m text-gray-500 px-2 py-2  my-2  mx-2">
     <span class="font-medium">  
      {{page}}
     </span>
     </p>

    {{#if hasNextPage}}

      <a href={{nextLink}} class="relative inline-flex items-center rounded-r-md px-2 py-2  my-2  mx-2 text-gray-500 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
          <span>Siguiente</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        </a>
    {{/if}}
 </nav>
 </div>
 </div>
{{else}}
    <h2>No hay productos</h2>
{{/if}}
   

<script src="/js/home.js"></script>